---
export interface Props {
  title: string;
}

const { title } = Astro.props;
import { SITE_TITLE, SITE_DESCRIPTION, SITE_OG_IMG } from "../config";
import { SEO } from "astro-seo";
import "../styles/base.css";
import "@fontsource/sora";
import "@fontsource/sora/variable.css";
import Header from "../components/Header.astro";
import Footer from "../components/Footer.astro";
---

<html lang="en" class="bg-page text-body antialiased">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="assets/icons/favicon.svg" />

    <SEO
      charset="UTF-8"
      title={title}
      titleTemplate="%s - Kyle Gordy"
      titleDefault="Kyle Gordy - UI Designer & Frontend Web Developer"
      description={SITE_DESCRIPTION}
      openGraph={{
        basic: {
          title: "Kyle Gordy - UI Designer & Frontend Web Developer",
          type: "A type.",
          image: `${SITE_OG_IMG}`,
        },
        optional: {
          description: `${SITE_DESCRIPTION}`,
        },
      }}
    />
  </head>
  <body class="grid min-h-screen grid-rows-[max-content,1fr,max-content]">
    <Header title={SITE_TITLE} />
    <slot />
    <Footer />
  </body>
</html>
